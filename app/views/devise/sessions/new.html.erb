<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-outline mb-4">
    <%= f.label :email, class:"form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"name@example.com" %>
  </div>

  <div class="field form-outline mb-4">
    <%= f.label :password, class:"form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field checkbox ">
      <%= f.check_box :remember_me, class:"form-check-input" %>
      <%= f.label :remember_me, class:"form-check-label" %>
    </div>
  <% end %>

  <br>
  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-primary btn-block" %>
  </div>
<% end %>
<br>

<%= render "devise/shared/links" %>
